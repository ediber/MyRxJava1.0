<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edi.myrxjava10.MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="313dp"
        android:text="____"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        tools:layout_editor_absoluteX="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="0dp"
        android:text="map"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="137dp"
        android:layout_height="62dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="79dp"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        android:layout_marginLeft="144dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="-1dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/txt1"
        app:layout_constraintTop_toTopOf="@+id/txt1" />

    <Button
        android:id="@+id/btnFlatMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="0dp"
        android:text="flat map"
        app:layout_constraintLeft_toRightOf="@+id/btnMap"
        app:layout_constraintTop_toTopOf="@+id/btnMap" />

    <TextView
        android:id="@+id/txtCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/txt2"
        app:layout_constraintTop_toTopOf="@+id/txt2" />

</android.support.constraint.ConstraintLayout>
